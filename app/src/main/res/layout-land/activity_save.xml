<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveActivity">

    <TextView
        android:id="@+id/saveText"
        android:layout_width="456dp"
        android:layout_height="73dp"
        android:text="@string/save_activity_text"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/saveLat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="170dp"
        android:layout_height="80dp"
        android:text="@string/save_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveLon" />

    <TextView
        android:id="@+id/saveAdd"
        android:layout_width="430dp"
        android:layout_height="40dp"
        android:text="@string/save_address_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/saveLat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveText" />

    <TextView
        android:id="@+id/saveLon"
        android:layout_width="430dp"
        android:layout_height="40dp"
        android:text="@string/save_latitude_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/saveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveLat" />

    <TextView
        android:id="@+id/saveLat"
        android:layout_width="430dp"
        android:layout_height="40dp"
        android:text="@string/save_longitude_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/saveLon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saveAdd" />
</androidx.constraintlayout.widget.ConstraintLayout>