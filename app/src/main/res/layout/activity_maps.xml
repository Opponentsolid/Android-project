<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="416dp"
        android:layout_height="517dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/get_location_button"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="120dp"
        android:text="@string/find_location_button_text"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/map"
        map:layout_constraintVertical_bias="0.934" />

    <TextView
        android:id="@+id/country"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/mapCountry"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/latitude"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/mapLongitude"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/get_location_button"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/latitude" />

    <TextView
        android:id="@+id/address"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/mapAddress"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/country"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/map" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="@string/mapLatitude"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/longitude"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/country" />

</androidx.constraintlayout.widget.ConstraintLayout>