<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="411dp"
        android:layout_height="474dp"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.333"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toTopOf="parent"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/get_location_button"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:text="@string/find_location_button_text"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toStartOf="@+id/buttonToSave"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/longitude" />

    <TextView
        android:id="@+id/country"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="@string/map_country_text"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/latitude"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/address" />

    <TextView
        android:id="@+id/longitude"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="@string/map_longitude_text"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/get_location_button"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/latitude" />

    <TextView
        android:id="@+id/address"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="@string/map_address_text"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/country"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/map" />

    <TextView
        android:id="@+id/latitude"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:text="@string/map_latitude_text"
        android:textSize="20sp"
        map:layout_constraintBottom_toTopOf="@+id/longitude"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintTop_toBottomOf="@+id/country" />

    <Button
        android:id="@+id/buttonToSave"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="@string/navigate_to_save_button_text"
        map:layout_constraintBottom_toBottomOf="parent"
        map:layout_constraintEnd_toEndOf="parent"
        map:layout_constraintHorizontal_bias="0.5"
        map:layout_constraintStart_toEndOf="@+id/get_location_button"
        map:layout_constraintTop_toBottomOf="@+id/longitude" />

</androidx.constraintlayout.widget.ConstraintLayout>